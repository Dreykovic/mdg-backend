{
  "name": "mdg-backend",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint './src/**/*.{ts,js}'",
    "lint:fix": "eslint './src/**/*.{ts,js}' --fix",
    "format": "prettier --write './src/**/*.{ts,js,json,css,md}'",
    "build": "npm run clean && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start:prod": "NODE_ENV=production node dist/src/index.js",
    "dev": "nodemon",
    "dev:seed": "npm run pri:seed && nodemon",
    "prebuild": "npm run lint ",
    "postbuild": "npm run assets",
    "assets": "cp -R src/public dist/public && cp -R src/views dist/public",
    "set-env-prod": "dotenv -e .env.prod -- npx cross-env NODE_ENV=production",
    "deploy": "npm run set-env-prod && npm run build && npm run start:prod",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=**/__tests__/**/*.test.ts",
    "test:integration": "jest --testPathPattern=**/tests/integration/**/*.integration.test.ts",
    "test:e2e": "jest --testPathPattern=**/tests/e2e/**/*.e2e.test.ts",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "pri:dev:migrate": "prisma migrate dev",
    "pri:dev:reset": "prisma migrate reset --force --skip-seed",
    "pri:generate": "prisma generate",
    "pri:studio": "prisma studio",
    "pri:prod:migrate": "prisma migrate deploy",
    "pri:db:push": "prisma db push",
    "pri:validate": "prisma validate",
    "pri:seed": "prisma db seed",
    "pri:format": "prisma format",
    "pri:doc": "prisma-docs-generator serve"
  },
  "prisma": {
    "schema": "./src/database/prisma/schema.prisma",
    "seed": "npx ts-node  -r tsconfig-paths/register ./src/database/prisma/seeders/seed.ts"
  },
  "keywords": [],
